
selectRemindersByTaskId:
SELECT * FROM ReminderTable tReminder
WHERE tReminder.taskId = :taskId;

selectRemindersCountByTaskId:
SELECT COUNT(*) FROM ReminderTable tReminder
WHERE tReminder.taskId = :taskId;

selectReminderById:
SELECT * FROM ReminderTable tReminder
WHERE tReminder.id = :reminderId;

